class Solution {
public:
    string truncateSentence(string s, int k) {
        vector<string> v;
        string s1,s2;
        int i,z=0;
        for(i=0;i<=s.size();i++)
        {
            if(z<k){
            if(s[i]!=' ' && i<s.size())
            {
                s1 = s1+s[i];
            }
            else if(s[i]==' '||i==s.size()){
                s1 = s1+' ';
                z++;
            }
            }
        }
        // for(i=0;i<k;i++)
        // {
        //     s2 = s2+v[i];
        //     if(i<k-1){
        //     s2 = s2+ ' ';
        //     }
        // }
        // //cout<<s2;
        s1.pop_back();
        return s1;
    }
};
